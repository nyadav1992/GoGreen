<resources>

    <style name="Widget.Theme.GoGreen.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="btnStyle" parent="wrap_wrap">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="text_header" parent="wrap_wrap">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="divider_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@color/grey</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="tvTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tvDescription">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue_text</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="llChargingInfo" parent="match_wrap">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tvTitleProfile" parent="tvTitle">
        <item name="android:textColor">@color/black_trans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tvDescriptionProfile" parent="tvDescription">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>